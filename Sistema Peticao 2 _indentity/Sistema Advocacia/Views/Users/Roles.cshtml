@model Sistema_Advocacia.ViewModels.UserView
@{
    ViewBag.Title = "Roles";
}

<h2>Roles</h2>
<h4>Configurações de Permissões - @Model.Nome</h4>


<p>
    @Html.ActionLink("Nova Permissão", "AddRole", new { userId = Model.UserId }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Voltar", "Index", new { user = Model }, new { @class = "btn btn-info" })
</p>
<table class="table">

    @*passe por todas a roles*@
    @for (int i = 0; i < Model.Roles.Count; i++)
    {

    <tr>
        <td>
            @Html.DisplayFor(modelItem => Model.Roles[i].Name)
        </td>
        <td>            
            @Html.ActionLink("Delete", "Delete", new { userId = Model.UserId, roleId = Model.Roles[i].RoleId})
        </td>
    </tr>
    }

</table>

