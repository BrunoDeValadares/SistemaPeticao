@model Sistema_Advocacia.Models.Questionario

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Questionario</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.QuestionarioId)
        @Html.HiddenFor(model => model.ProcessoPeticaoId)


        <dl class="dl-horizontal">
            <dt class="col-md-offset-02">
                @Html.DisplayNameFor(model => model.TituloTrecho)
            </dt>
            <dd style="margin-left: 205px">
                @Html.DisplayFor(model => model.TituloTrecho)
            </dd>

        </dl>

        <div class="form-group">
            @Html.LabelFor(model => model.Pergunta, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Pergunta, new { htmlAttributes = new { style = "width: 60%; max-width: 100%;", @class = "form-control" } })                
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Resposta, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Resposta, 4, 90, htmlAttributes: new { style = "width: 60%; max-width: 100%;", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Resposta, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model._GetExemplo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model._GetExemplo, 4, 8, htmlAttributes: new { style = "width: 60%; max-width: 100%;",  @readonly = "readonly",  @class = "form-control", })
                @Html.ValidationMessageFor(model => model._GetExemplo, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>
