@model IEnumerable<Sistema_Advocacia.Models.Documento>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Tipo de Documentos</h2>

<p>
    @Html.ActionLink("Novo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comentario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Civil)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Previdenciario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DireitoTrabalho)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comentario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Civil)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Previdenciario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DireitoTrabalho)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.DocumentoId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.DocumentoId }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.DocumentoId })
        </td>
    </tr>
}

</table>
