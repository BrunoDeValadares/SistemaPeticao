@model Sistema_Advocacia.Models.PeticaoModelo

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

@if (@ViewBag.MensagemErro != null)
{
<h4 style="color:red;">@ViewBag.MensagemErro</h4>
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Tipo de Petição</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.PeticaoModeloId)

    <div class="form-group">
        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NomeAcao, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.NomeAcao, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NomeAcao, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NaturezaAcaoId, "Natureza da Ação", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("NaturezaAcaoId", null, "selecione um registro", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.NaturezaAcaoId, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.Comentario, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Comentario, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Comentario, "", new { @class = "text-danger" })
        </div>
    </div>

    <hr />
    <h4>Petição Original</h4>
    @Html.TextAreaFor(model => model.PeticaoOriginal, 20, 10, htmlAttributes: new { style = "width: 60%; max-width: 100%;", @class = "form-control" })
    @Html.ValidationMessageFor(model => model.PeticaoOriginal, "", new { @class = "text-danger" })
    <p></p>
    <h4>Petição Anotada</h4>
    @Html.TextAreaFor(model => model.PeticaoModificada, 20, 10, htmlAttributes: new { style = "width: 60%; max-width: 100%;", @class = "form-control" })
    @Html.ValidationMessageFor(model => model.PeticaoModificada, "", new { @class = "text-danger" })
    <p></p>

    <div class="form-group">
        <div class="col-md-offset-00 col-md-12">
            <input type="submit" value="Salvar" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>
